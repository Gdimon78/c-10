#include <iostream>
#include <vector>
#include <list>
using namespace std;

class Student{
public:
    string name;
    string surname;
    string lecture_hall;

    Student(string n, string s, string m){
        name = n;
        surname = s;
        lecture_hall = m;

    };
};
class Teacher: public Student{
public:
    list<Student*> group;
    short rank;
    Teacher(string n1, string s1, string m1) : Student(n1, s1, m1) {
        name = n1;
        surname = s1;
        lecture_hall = m1;

    };
    Teacher& visit_card(){
        cout << "Surname: " << surname << endl;
        cout << "Name: " << name << endl;
        cout << "Lecture hall: " << lecture_hall << endl;
        cout << "Rank: " << rank << endl;
    }
};
int main(){
    Teacher Ilya(  "Илья", "Колокольников","249");
    Student Dima( "Дмитрий", "Гейсис", "248");
    Student Sasha( "Александр", "Волкогон", "247");

    Ilya.group.push_back(&Dima);
    Ilya.group.push_back(&Sasha);
    Student* adress = &Dima;
    Student frt1 = *adress; // frt1 = *&frt
    return 0;
}
